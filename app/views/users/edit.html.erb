<section id = "form">
  <div class= "container">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Edit User</h2>
      </div>
      <div class="panel-body">
        <%= form_for(@user) do |f| %>
            <div class="form-group">
              <%= f.label :user_name, class: "col-sm-2 control-label" %>
              <div class="col-sm-4">
                <%= f.text_field :name, class: "form-control", autofocus: true %>
              </div><br />
            </div><br />
            <div class="form-group">
              <%= f.label :phone_no, class: "col-sm-2 control-label" %>
              <div class="col-sm-4">
                <%= f.text_field :phone_no, class: "form-control", autofocus: true %>
              </div><br />
            </div><br />
            <div class="form-group">
              <%= f.label :nic_name, class: "col-sm-2 control-label" %>
              <div class="col-sm-4">
                <%= f.text_field :nic_name, class: "form-control", autofocus: true %>
              </div><br />
            </div><br />
            <div class="form-group">
              <%= f.label :email, class: "col-sm-2 control-label" %>
              <div class="col-sm-4">
                <%= f.email_field :email, class: "form-control", autofocus: true %>
              </div><br />
            </div><br />
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-4">
                <%= f.submit "Update",class: "btn btn-default submit" %>
              </div>
            </div>
        <% end %><br /><br />
      </div>
    </div>
  </div>
</section>

          
          